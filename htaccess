# Rewrite rules to maintain any hard-coded URLs following http://dev.tiki.org/ImgDirectoryRevamp
RewriteRule ^img/icons2/(.*)$ img/icons/$1 
RewriteRule ^pics/large/(.*)$ img/icons/large/$1
