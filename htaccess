# If it ends in .html, but doesn't exist
RewriteCond %{REQUEST_URI} .html$
RewriteCond %{DOCUMENT_ROOT}/%{REQUEST_URI}.html !-f
# But does exist as a path
RewriteCond %{DOCUMENT_ROOT}/%{REQUEST_URI} -d
# Strip off the html
RewriteRule ^/?(.+[^/]).html$ /$1/ [R,L]
## Direct to it and stop processing

## Deal with the slashes/html issue. 
## If it doesn't end with html and doesn't exist as file or directory
RewriteCond %{REQUEST_URI} !.html$
RewriteCond %{DOCUMENT_ROOT}/%{REQUEST_URI} !-d
RewriteCond %{DOCUMENT_ROOT}/%{REQUEST_URI} !-f

## If the .html version exists
RewriteCond %{DOCUMENT_ROOT}/%{REQUEST_URI}.html -f
RewriteRule ^/?(.+[^/])/?$ /$1.html [R,L]
## Direct to it and stop processing
</IfModule>
