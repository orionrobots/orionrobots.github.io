---
layout: default
---
<div class="row-fluid post-full">
  <div class="span12">
    <div class="date">
      <time>{{ page.date | date_to_long_string }}</time>
      <div class="author">by {{ page.author | default: author | default: "Danny Staple" }}</div>
    </div>

    <article class="content">
      {{ content }}
    </article>
  </div>
</div>
